        }

        .main-content {
            margin: 20px;
        }

        .numero {
            display: inline-block;
            width: 60px;
            height: 60px;
            margin: 10px;
            font-size: 24px;
            background-color: #fff;
            border-radius: 50%;
            line-height: 60px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .numero.disponivel:hover {
            background-color: #8bc34a;
        }

        .numero.indisponivel {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .cta {
            font-size: 20px;
            color: #f57c00;
            margin-top: 20px;
